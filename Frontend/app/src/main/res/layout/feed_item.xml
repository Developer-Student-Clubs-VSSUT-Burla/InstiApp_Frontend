<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/feed_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/project_icon" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingTop="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textStyle="bold"
                    android:paddingLeft="2dp"
                    android:textColor="#244D61"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/feed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insti-App"
                    android:paddingLeft="2dp"
                    android:textColor="#244D61"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contributor: "
                    android:textStyle="bold"
                    android:paddingLeft="2dp"
                    android:textColor="#7C7D81"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/feed_contributor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GDSC-VSSUT"
                    android:textColor="#7C7D81"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category: "
                    android:textStyle="bold"
                    android:paddingLeft="2dp"
                    android:textColor="#7C7D81"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/feed_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creative"
                    android:textColor="#7C7D81"
                    android:textSize="20sp"/>
            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>